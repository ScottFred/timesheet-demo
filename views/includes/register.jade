form(role='form', action="/auth/register?from=#{from || ''}", method='post')
    .form-group
        p.help-block Choose a username and password and click Register to create a new Timesheet Demo App account.
        include ./error-alert.jade
    .form-group
        label(for='username') Username
        input.form-control#username(type='text', name='username', placeholder='Username', autocomplete='off')
    .form-group
        label(for='password') Password
        input.form-control#password(type='password', name='password', placeholder='Password', autocomplete='off')
    .form-group.buttons
        button.btn.btn-primary(type='submit') Register
