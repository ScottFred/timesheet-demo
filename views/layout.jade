doctype html
html(lang='en',ng-app='timesheetApp')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title=title
        link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.css', rel='stylesheet', media='screen')
        link(href='https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css', rel='stylesheet')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.js')
    body
        header
            nav.navbar.navbar-inverse.navbar-fixed-top
                div.container
                    div.navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse' data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/') Timesheet Demo App
                    div#navbar.collapse.navbar-collapse
                        ul.nav.navbar-nav.navbar-left
                            if(user)
                                li
                                    a(href='/') Timesheets
                                li
                                    a(href='/projects') Projects
                            else
                                li
                                    a(href='/') Home
                            li
                                a(href='/about') About
                            li
                                a(href='/contact') Contact
                        ul.nav.navbar-nav.navbar-right
                            if (user)
                                li
                                    a.dropdown-toggle(data-toggle='dropdown', href='#', role='button', aria-expanded='false') #{user.username}
                                        span.caret
                                    ul.dropdown-menu(role='menu')
                                        li
                                            a(href="/auth/logout") Logout
                            else
                                li
                                    a(href="/auth/login") Login
                                li
                                    a(href="/auth/register") Register
        main.container
            block content

        footer
            .container
                p &copy #{new Date().getFullYear()} Cinlogic LLC. All Rights Reserved.

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.js')
    script(src='/javascripts/site.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.js')
    script(src='/javascripts/app.js')

    block scripts


