doctype html
html(lang='en',ng-app='timesheetApp')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title=title
        link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/bower_components/font-awesome/css/font-awesome.min.css')
        link(rel='stylesheet', href='/bower_components/jquery-ui/themes/smoothness/jquery-ui.min.css')
        link(rel='stylesheet', href='/bower_components/jquery-ui/themes/smoothness/theme.css')
        link(rel='stylesheet', href='/assets/stylesheets/style.css')
        link(rel='stylesheet', href='/assets/stylesheets/ng-toasty.css')
        script(src='/bower_components/angular/angular.min.js')
        script(src='/bower_components/angular-animate/angular-animate.min.js')
    body
        header
            nav.navbar.navbar-inverse.navbar-fixed-top
                div.container
                    div.navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse' data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/') Timesheet Demo App
                    div#navbar.collapse.navbar-collapse
                        ul.nav.navbar-nav.navbar-left
                            if(user)
                                li
                                    a(href='/') Timesheets
                                li
                                    a(href='/projects') Projects
                            else
                                li
                                    a(href='/') Home
                        ul.nav.navbar-nav.navbar-right
                            if (user)
                                li
                                    a.dropdown-toggle(data-toggle='dropdown', href='#', role='button', aria-expanded='false') #{user.username}
                                        span.caret
                                    ul.dropdown-menu(role='menu')
                                        li
                                            a(href="/auth/logout") Logout
                            else
                                li
                                    a(href="/auth/login") Login
                                li
                                    a(href="/auth/register") Register
        main.container
            block content

        footer
            .container
                p &copy #{new Date().getFullYear()} Cinlogic LLC. All Rights Reserved.

        include ./includes/toasty.jade

    script(src='/bower_components/jquery/jquery.min.js')
    script(src='/bower_components/jquery-ui/jquery-ui.min.js')
    script(src='/bower_components/bootstrap/bootstrap.js')
    script(src='/assets/javascripts/site.js')
    script(src='/app.js')

    block scripts


